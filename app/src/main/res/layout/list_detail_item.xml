<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="history"
            type="com.udacity.stockhawk.to.StockHistoryTO" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            style="@style/StockHistoryDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_margin"
            android:textDirection="anyRtl"
            app:history_close_date="@{history.date"
            tools:text="Monday December 19, 2017" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/StockHistoryDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/opening_price"
                android:textDirection="anyRtl" />

            <TextView
                style="@style/StockHistoryDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textDirection="anyRtl"
                app:history_opening_price="@{history.open"
                tools:text="$43.99" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/StockHistoryDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/closing_price"
                android:textDirection="anyRtl" />

            <TextView
                style="@style/StockHistoryDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textDirection="anyRtl"
                app:history_closing_price="@{history.close"
                tools:text="$41.99" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/StockHistoryDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adjusted Close"
                android:textDirection="anyRtl" />

            <TextView
                style="@style/StockHistoryDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textDirection="anyRtl"
                app:history_adjusted_price="@{history.adjClose"
                tools:text="$41.99" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Adjusted close amount" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Open amount" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="high Open amount" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="low amount" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Volume" />
    </LinearLayout>

</layout>
