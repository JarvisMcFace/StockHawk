<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="64dp"
    android:orientation="vertical"
    android:background="@drawable/marker2">

    <TextView
        android:textDirection="anyRtl"
        android:id="@+id/close_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/material_small_margin"
        android:layout_marginLeft="@dimen/material_small_margin"
        android:layout_marginRight="@dimen/material_small_margin"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        tools:text="10/12/2017" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_space" />

    <TextView
        android:textDirection="anyRtl"
        android:id="@+id/close_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/material_small_margin"
        android:layout_marginRight="@dimen/material_small_margin"
        android:layout_marginBottom="@dimen/material_small_margin"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        tools:text="$10.33" />

</LinearLayout>
