<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PercentChangeTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BidPriceTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryText</item>

    </style>

    <style name="StockNameTextStyle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="StockSymboleTextStyle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="StockSymbolTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>

        <item name="android:textColor">@color/primaryText</item>
        <item name="android:layout_marginLeft">@dimen/material_margin</item>
        <item name="android:layout_marginRight">@dimen/material_margin</item>
    </style>

    <style name="WidgetTextStyle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="StockHistoryDetails">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryText</item>

    </style>

    <style name="ToolBarStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
